<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.xo.SendSms">

    <Button
        android:id="@+id/BtnSend"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/BtnPick"
        android:layout_alignBottom="@+id/BtnPick"
        android:layout_toEndOf="@+id/EtName"
        android:text="@string/send"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/EtMass"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="36dp"
        android:ems="10"
        android:textSize="40sp"
        android:hint="@string/massege"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/BtnPick"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="41dp"
        android:layout_toStartOf="@+id/BtnSend"
        android:text="@string/pick"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/EtName"
        android:layout_width="129dp"
        android:layout_height="29dp"
        android:layout_above="@+id/EtPho"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="36dp"
        android:ems="10"
        android:textSize="27sp"
        android:hint="@string/name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/EtPho"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EtMass"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="36dp"
        android:hint="@string/phone_number" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/EtName"
        app:srcCompat="@drawable/msboards" />


</RelativeLayout>
